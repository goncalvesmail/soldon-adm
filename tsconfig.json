{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/moment"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@models/*": ["app/models/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"]
    }
  }
}
